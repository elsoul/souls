#!/usr/bin/env ruby
require "souls"
require "thor"
begin
  souls_command = ARGV[0]
  require("./config/souls") unless [
    "new",
    "docker",
    "-v",
    "deploy",
    "help",
    "api",
    "create",
    "gcloud",
    "worker"
  ].include?(souls_command)
rescue StandardError
  raise(StandardError, "No confif! Please make `./config/souls.rb` File!")
end

Souls::CLI.start
