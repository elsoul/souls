#!/usr/bin/env ruby
require "souls"
require "thor"
begin
  souls_command = ARGV[0]
  require(Souls.get_mother_path.to_s + "/config/souls") unless [
    "new",
    "docker",
    "-v",
    "help",
    "",
    nil
  ].include?(souls_command)
rescue StandardError
  raise(StandardError, "No config! Please make `./config/souls.rb` File!")
end

Souls::CLI.start
