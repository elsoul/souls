#!/usr/bin/env ruby
require "souls"
require "active_support/all"

begin
  case ARGV[0]
  when "new"
    if ARGV[1].nil?
      puts "you need to specify your app name \n `souls new app_name`"
      exit
    end
    puts "Which framework:   \n 1. SOULS gRPC Service \n 2. SOULS GraphQL API \n 3. SOULS Media Web \n 4. SOULS Admin Web \n Enter Number: "
    mode = STDIN.gets.chomp.to_i
    mode.in?((1..4).to_a) ? puts("Type Your APP Name: \n") : raise(StandardError, "Choose Number 1..4")
    app_name = STDIN.gets.chomp
    Souls::Init.create_souls mode: mode, app_name: app_name
  when "s" || "server"
    system "bundle exec rake run_server"
  when "c" || "console"
    system "bundle exec irb"
  when "i" || "infra"
    Souls.send ARGV[1]
  when "init"
    Souls::Init.config
  else
    puts "Welcome to Souls!Yeah!"
  end
rescue StandardError => error
  puts error
  puts "Thank you!Souls!"
end