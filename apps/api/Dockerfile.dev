FROM ruby:3.1.0

RUN apt-get update -qq && apt-get install -y nodejs redis-server 

USER root

RUN mkdir /myapp
WORKDIR /myapp

COPY Gemfile /myapp/Gemfile
COPY Gemfile.lock /myapp/Gemfile.lock
RUN gem install bundler:2.3.5
RUN bundle
COPY . /myapp

EXPOSE 4000
CMD ["foreman", "start", "-f", "Procfile.dev"]